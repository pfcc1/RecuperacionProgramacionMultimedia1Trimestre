<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recuperacionprogramacionmultimedia1trimestre">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ModoJuego"></activity>
        <activity android:name=".BorrarTareas" />
        <activity android:name=".RealizarTarea" />
        <activity android:name=".Mostrar_Tareas" />
        <activity android:name=".Agregar_Tarea" />
        <activity android:name=".Sonido" />
        <activity android:name=".Menu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ServicioMusica"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>